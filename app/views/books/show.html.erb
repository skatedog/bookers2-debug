<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<div class="books-detail">
  		  <%= render "books/detail", book: @book %>
  		</div>
      <div class="books-comments">
        <%= render "books/comments", {book: @book, book_comment: BookComment.new } %>
      </div>
    </div>
  </div>
</div>