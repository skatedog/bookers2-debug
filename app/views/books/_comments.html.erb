<table>
  <% book.book_comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(comment.user.id) do %>
          <%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg", size: "50x50") %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.body %></td>
      <% if comment.user == current_user %>
        <td>
          <%= link_to "Destroy", book_book_comment_path(comment.book.id, comment.id), method: :delete, class: "btn btn-sm btn-danger" %>
        </td>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>
<%= form_with model: [book, book_comment], local:true do |f| %>
  <%= f.text_area :body, class: "form-control" %>
  <%= f.submit "送信" %>
<% end %>