<h2>投稿数の前日比・前週比</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>今日の投稿数</th>
      <th>前日の投稿数</th>
      <th>前日比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @books.posted_today.count %></td>
      <td><%= @books.posted_yesterday.count %></td>
      <td><%= user.posted_day_ratio %></td>
    </tr>
  </tbody>
</table>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>今週の投稿数</th>
      <th>前週の投稿数</th>
      <th>前週比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @books.posted_this_week.count %></td>
      <td><%= @books.posted_last_week.count %></td>
      <td><%= user.posted_week_ratio %></td>
    </tr>
  </tbody>
</table>
<h2>7日間分の投稿数</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <% @days.each do |day| %>
        <th><%= day %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @datas.each do |data| %>
        <td><%= data %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<canvas id="myLineChart"></canvas>

<script>
$(document).on('turbolinks:load', function() {
  var days = <%== @days %>
  var datas = <%= @datas %>
  var ctx = document.getElementById("myLineChart");
  var myLineChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: days,
      datasets: [
        {
          label: '投稿した本の数',
          data: datas,
          borderColor: "rgba(0,0,255,1)",
          backgroundColor: "rgba(0,0,0,0)"
        }
      ],
    },
    options: {
      title: {
        display: true,
        text: '7日間分の投稿数'
      },
      scales: {
        yAxes: [{
          ticks: {
            suggestedMax: 10,
            suggestedMin: 0,
            stepSize: 1
          }
        }]
      },
    }
  });
});
</script>