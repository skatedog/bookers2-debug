<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <div id="books_index">
        <%= render 'books/index',books: @books %>
      </div>
      <%= form_with url: user_path(params[:id]), method: :get do |f| %>
        <%= f.date_field :serch_date %>
        <%= f.submit "検索", class:"btn btn-primary" %>
      <% end %>
      <div id="users_serch_date">
        <%= render "users/serch_date",serch_books_count: @serch_books_count %>
      </div>
      <%= render 'users/posts_data', user: @user %>
    </div>
  </div>
</div>