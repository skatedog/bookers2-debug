<% if book.favorited_by?(current_user) %>
  <td><%= link_to book.favorites.count, book_favorites_path(book.id), method: :delete, class: "fas fa-heart heart_red" %></td>
<% else %>
  <td><%= link_to book.favorites.count, book_favorites_path(book.id), method: :post, class: "fas fa-heart heart_blue" %></td>
<% end %>